{% extends 'infosUsers.html.twig' %}

{% block title %} Profil de
            {% for info in app.user.infos %}
               {{info.prenom}} {{info.nom}}
            {% endfor %} 
{% endblock %}

{% block body %}


    {# grille de axentix #}
    <div class="grix xs4 container mt-3 text-center">  {# xs4: si je veux avoir 2 colonnes: 3 et 4 par exemple#}
        {# On fait une boucle pour afficher une alerte après la mise à jour du profile #}
        {% for message in app.flashes('message') %}
            <div class="col-xs4">
                <div class="p-3 my-2 rounded-2 success">{{ message }}</div>
            </div>
        {% endfor %}

        {# <div class="col-xs4">
            <h1>Profil de
                {% for info in app.user.infos %}
                {{info.prenom}} {{info.nom}}
                {% endfor %} 
            </h1>
        </div> #}
        {% for info in app.user.infos %}
        <div class="containter">
            <div class="row">
               <table  class="table-bordered table-striped center">
                    <tbody>
                        <tr>
                            <td>Nom:</td> 
                            <td>{{info.nom}}</td>
                        </tr>
                         <tr>
                            <td>Prenom:</td> 
                            <td>{{info.prenom}}</td>
                        </tr> 
                        <tr>
                            <td>Date de naissance:</td> 
                            <td>{{info.birthday | date ('m/d/y')}}</td>
                        </tr>
                        <tr>
                            <td>Lieu de naissance:</td> 
                            <td>{{info.lieudenaissance}}</td>
                        </tr>
                        <tr>
                            <td>Adresse:</td> 
                            <td>{{info.adresse}}</td>
                        </tr>
                        <tr>
                            <td>Ville:</td> 
                            <td>{{info.ville}}</td>
                        </tr>
                        <tr>
                            <td>Code postale:</td> 
                            <td>{{info.codepostale}}</td>
                        </tr>
                        <tr>
                            <td>Pays:</td> 
                            <td>{{info.pays}}</td>
                        </tr>
                        <tr>
                            <td>Téléphone:</td> 
                            <td>{{info.tel}}</td>
                        </tr>
                        <tr>
                            <td>Lieu de travail:</td> 
                            <td>{{info.lieudetravail}}</td>
                        </tr> 
                        <tr>
                            <td>Parcours professionnel:</td> 
                            <td>{{info.parcoursprof}}</td>
                        </tr>
                        <tr>
                            <td>Parcours scolaire:</td> 
                            <td>{{info.parcoursscolaire}}</td>
                        </tr>
                        <tr>
                            <td>Nationalité:</td> 
                            <td>{{info.nationalite}}</td>
                        </tr>
                        <tr>
                            <td>Civilité:</td> 
                            <td>{{info.civilite}}</td>
                        </tr>
                    </tbody>
               </table>
            </div>
        </div>
            
        {% endfor %} 
        {# <div class="col-xs1">Email: </div>
        <div class="col-xs3">{{app.user.email}}</div>  #}
        
    </div> 
           
{% endblock %}

