{% extends 'infosUsers.html.twig' %}
 
{% block title %}Mon compte{% endblock %}
 
{% block body %}
 
{# {% if search %}{% endif %} #}
<div class="w3-main w3-light-gray pb-5" style= "margin-top:20px;">
  <div class="w3-container" style="padding-top:30px"></div>
  {# {% include('account/search.html.twig') %} #}
    <div class="container" style="padding-top:30px">
       {{ form(form) }}
       <h3>Résultat de votre recherche</h3>
       <hr>
    
    </div> 
    
    {% for info in infos %}
        <div class="w3-container" style="padding-top:30px"></div>
        <div class="container" style="font-family: Helvetica; font-size: 1.4em;">
        {% if info is defined %}
        <table class="w3-table bordered">
            <tbody>
                 <tr>
                    <td>Photo</td>
                    <td><img id="foto" src="{{asset('/images/users/' ~ info.imageName)}}"></td>
                </tr
                <tr>
                    <td>Nom et prénom</td>
                    <td>{{ info.nom }}  {{ info.prenom }}</td>
                </tr>
                <tr>
                    <td>Adresse</td>
                    <td>{{ info.adresse }}</td>
                </tr>
                <tr>
                    <td>Code postal</td>
                    <td>{{ info.codepostale }}</td>
                </tr>
                <tr>
                    <td>Adresse</td>
                    <td>{{ info.adresse }}</td>
                </tr>
                <tr>
                    <td>Ville</td>
                    <td>{{ info.ville }}</td>
                </tr>
                <tr>
                    <td>Pays</td>
                    <td>{{ info.ville }}</td>
                </tr>
                <tr>
                    <td>Téléphone</td>
                    <td>{{ info.tel }}</td>
                </tr>
                <tr>
                    <td>Civilité</td>
                    <td>{{ info.civilite }}</td>
                </tr>
                <tr>
                    <td>Nationalité</td>
                    <td>{{ info.nationalite }}</td>
                </tr>
                <tr>
                    <td>Département</td>
                    <td>{{ info.category }}</td>
                </tr>
             </tbody>
         </table>
        {% else %}
        {% endif %}
         <hr>
      </div>
  {% endfor %}
  
</div>

{% endblock %}
 
 
