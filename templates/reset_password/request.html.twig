{% extends 'base.html.twig' %}

{% block title %}Réinitialisation mot de passe{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center" id="reset_password">
        {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <h1>Réinitialisez votre mot de passe</h1>

        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>
                    Enter your email address and we we will send you a
                    link to reset your password.
                </small>
            </div>

            <button class="btn btn-primary mt-2">Envoyer votre email pour rénitialiser votre mot de passe</button>
        {{ form_end(requestForm) }}
    </div>
</div>
{% endblock %}